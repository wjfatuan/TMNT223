<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/btnLeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leo"
            />

        <RadioButton
            android:id="@+id/btnRaph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raph"
            />

        <RadioButton
            android:id="@+id/btnDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donatello"
            />

        <RadioButton
            android:id="@+id/btnMike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mike"
            />


    </RadioGroup>

    <ListView
        android:id="@+id/listTurtles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:entries="@array/tmnt_names"
        />


    <ImageView
        android:id="@+id/ivTurtle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leonardo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        />
</androidx.constraintlayout.widget.ConstraintLayout>